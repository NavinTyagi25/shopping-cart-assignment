
    <main class="form-container">
      <div class="heading">
        <h1 class="heading__primary">
          Signup
        </h1>
        <h3 class="heading__sub">
          We do not share you personal detail with anyone.
        </h3>
      </div>
      <form class="form">
        <div class="form__input-container">
          <input
            type="text"
            class="register-form__input"
            required
            name="Full Name"
          />
          <label for="name">Full Name</label>
          <div class="bar"></div>
        </div>

        <div class="form__input-container">
          <input
            type="text"
            class="register-form__input"
            required
            name="Last Name"
          />
          <label for="name">Last Name</label>
          <div class="bar"></div>
        </div>

        <div class="form__input-container">
          <input
            type="text"
            class="register-form__input"
            required
            name="Email"
          />
          <label for="name">Email</label>
          <div class="bar"></div>
        </div>

        <div class="form__input-container">
          <input
            type="password"
            class="register-form__input"
            required
            name="Password"
          />
          <label for="name">Password</label>
          <div class="bar"></div>
        </div>

        <div class="form__input-container">
          <input
            type="password"
            class="register-form__input"
            required
            name="Confirm Password"
          />
          <label for="name">Confirm Password</label>
          <div class="bar"></div>
        </div>

        <a class="btn form__submit" href="/login">Signup</a>
      </form>
    </main>
